{
    "name": "Netflix Gamepad Controller Interface",
    "version": "0.1",
    "description": "Control Netflix in your browser with a gamepad or controller.",
    "manifest_version": 2,
    "permissions": [
        "*://*.netflix.com/*",
        "activeTab",
        "declarativeContent",
        "tabs"
    ],
    "background": {
        "scripts": ["app/background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["*://*.netflix.com/*"],
            "exclude_matches": ["*://help.netflix.com/*"],
            "js": [
                "static/js/gamepads.js",
                "app/common/direction.js",
                "app/common/slider.js",
                "app/handlers/page-handler.js",
                "app/handlers/slider-page.js",
                "app/handlers/home.js",
                "app/content.js"
            ]
        }
    ],
    "options_page": "app/settings.html",
    "page_action": {
        "default_popup": "app/popup.html",
        "default_icon": {
            "16": "static/icon16.png",
            "32": "static/icon32.png",
            "48": "static/icon48.png",
            "128": "static/icon128.png"
        }
    },
    "icons": {
        "16": "static/icon16.png",
        "32": "static/icon32.png",
        "48": "static/icon48.png",
        "128": "static/icon128.png"
    }
}